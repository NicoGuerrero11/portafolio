<style>
    .contact {
        padding: 6rem 0;
        background: var(--bg-secondary);
        text-align: center;
    }

    .contact-content {
        max-width: 600px;
        margin: 0 auto;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
    }

    p {
        font-size: 1.1rem;
        color: var(--text-dim);
        margin-bottom: 2rem;
    }

    .contact-email {
        display: inline-block;
        padding: 1rem 2rem;
        background: var(--accent);
        color: var(--bg);
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s;
    }

    .contact-email:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(0, 255, 135, 0.3);
    }
</style>
